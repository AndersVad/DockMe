<Window
    x:Class="WpfApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Window"
    Title="MainWindow"
    Width="800"
    Height="450"
    AllowsTransparency="True"
    Background="Transparent"
    BorderThickness="0"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border BorderBrush="Blue" BorderThickness="0">
        <local:DockHost1>
            <Grid Background="Red">
                <StackPanel>
                    <TextBlock Text="{Binding ElementName=Window, Path=Left}" />
                    <TextBlock Text="{Binding ElementName=Window, Path=Top}" />
                    <TextBlock Text="{Binding ElementName=Window, Path=ActualWidth}" />
                    <TextBlock Text="{Binding ElementName=Window, Path=ActualHeight}" />
                </StackPanel>
            </Grid>
        </local:DockHost1>
    </Border>
</Window>
