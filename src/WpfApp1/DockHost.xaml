<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WpfApp1">
    <Style x:Key="DockHostStyle" TargetType="local:DockHost">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:DockHost">
                    <Grid SnapsToDevicePixels="True">
                        <ContentPresenter Margin="5" />
                        <Border x:Name="Left" BorderThickness="5,0,0,0" />
                        <Border x:Name="Top" BorderThickness="0,5,0,0" />
                        <Border
                            x:Name="Right"
                            BorderThickness="0,0,5,0"
                            SnapsToDevicePixels="True" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="Left" Value="Docked">
                            <Setter TargetName="Left" Property="BorderBrush" Value="Cyan" />
                        </Trigger>
                        <Trigger Property="Left" Value="Docking">
                            <Setter TargetName="Left" Property="BorderBrush" Value="Yellow" />
                        </Trigger>
                        <Trigger Property="Top" Value="Docked">
                            <Setter TargetName="Top" Property="BorderBrush" Value="Cyan" />
                        </Trigger>
                        <Trigger Property="Top" Value="Docking">
                            <Setter TargetName="Top" Property="BorderBrush" Value="Yellow" />
                        </Trigger>
                        <Trigger Property="Right" Value="Docked">
                            <Setter TargetName="Right" Property="BorderBrush" Value="Cyan" />
                        </Trigger>
                        <Trigger Property="Right" Value="Docking">
                            <Setter TargetName="Right" Property="BorderBrush" Value="Yellow" />
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style BasedOn="{StaticResource DockHostStyle}" TargetType="local:DockHost" />
</ResourceDictionary>